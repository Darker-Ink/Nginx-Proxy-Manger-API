    "bugs": {
        "url": "https://github.com/Darker-Ink/Nginx-Proxy-Manger-API/issues"
    },
    "homepage": "https://github.com/Darker-Ink/Nginx-Proxy-Manger-API#readme",
    "devDependencies": {
        "prettier": "^2.6.2",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.6.4"
    }
}